generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid()) //making uuid to protect from collison and also made it string
  email     String     @unique
  username  String     @unique
  password  String
  otp       String     @default("")
}